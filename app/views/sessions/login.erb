<% if session[:failure_message] %>
    <%= session[:failure_message] %>
<% end %>

<h1>Log In</h1>

<form action="/login" method="post">
    <br>
    <div class="input-field col s12">
        <label for="user_username">User Name</label>
        <input class="validate" type="text" name="user[username]" id="user_username">
    </div>
    <br>
    <div class="input-field col s12">
        <label for="user_password">Password</label>
        <input class="validate" type="password" name="user[password]" id="user_password">
    </div>
    <br>
    <button type="submit" class="grey darken-4 waves-effect waves-light btn-small"> <i class="material-icons left" >next_week</i> Log In</button> 
    <br>
</form>

