<h1>Sign Up</h1>

<form action="/signup" method="post">
    <br>
    <div class="input-field col s12">
        <input type="text" name="user[name]" id="user_name" class="validate">
        <label for="user_name" style="font-size:22px">Name</label>
    </div>
    <br>
    <div class="input-field col s12">
        <input class="validate" type="text" name="user[username]" id="user_username">
        <label for="user_username" style="font-size:22px">User Name</label>
    </div>
    <br>
    <div class="input-field col s12">
        <input class="validate" type="password" name="user[password]" id="user_password">
        <label for="user_password" style="font-size:22px">Password</label>
    </div>
    <br>
    <button type="submit" class="grey darken-4 waves-effect waves-light btn-small"> <i class="material-icons left" style="margin-right:2px; margin-left:-8px">send</i> Sign Up</button> 
    <br>
</form>

