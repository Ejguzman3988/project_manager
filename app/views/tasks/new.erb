<h1>New Tasks</h1>
<div class="row">
    <form class="col s12" action="/projects/<%=@project.id%>/tasks"  method="post">
        <div class="row">
            <div class="input-field col s12">
                <label for="task_name">Task Name:</label>
                <input type="text" name="project[task][name]" id="task_name" data-length="20">
            </div>
        </div>

        <div class="row">
            <div class="input-field col s12">
                <h5>
                    Assign User:
                </h5>
                <% @project.users.each do |user| %>
                    <li>
                        <label>
                            <input type="radio" name="project[task][user_id]" id="project_user" value="<%=user.id%>">
                            <span><%= user.username %></span>
                        </label>
                    </li>
                <% end %>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s12">
                <label for="project_description" >Task Description</label>
                <textarea name="project[task][description]" id="project_description" class="materialize-textarea" data-length="5000"></textarea>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s12">
                <label class="active" for="task_deadline">Deadline: </label>
                <input type="datetime-local" name="project[task][deadline]" id="task_deadline">
            </div>
        </div>

        <br>
        <button type="submit" class="grey darken-4 waves-effect waves-light btn-small"> <i class="material-icons left">assignment</i> Create Task</button> 
    </form>
</div>