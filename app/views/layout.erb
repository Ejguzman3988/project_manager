    <title>ProjectManager</title>  

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

  </head>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  
  <!-- Image -->
    <%# <div>
      <img src="https://d3njjcbhbojbot.cloudfront.net/api/utilities/v1/imageproxy/https://coursera-course-photos.s3.amazonaws.com/fa/e15e80504811e6bcaf7158d37ab7ca/LightBulb.jpg?auto=format%2Ccompress&dpr=1" width="100" height="50" alt="">
    </div> %>
  <!-- End Image -->

  <!-- Navigation -->
  <nav class="blue-grey darken-3">
    <div class="container">
      <% if logged_in? %>
        <ul>
          <li class="left">
            <a href="/users/<%=current_user.id%>"><i class="material-icons left">home</i>P/M</a>
          </li>
          <li class="middle">
            <a href="/projects"><i class="material-icons left" >image_search</i>Browse</a>
          </li>
          <li class="right">
            <a href="/logout"><i class="material-icons right">exit_to_app</i>Log Out</a>
          </li>
          <li class="right">
            <a href="/notifications"><i class="material-icons left" >notifications</i><span class="new badge"><%=current_user.not_our_notes.length%></span></a>
          </li>
          <li class="right">
            <a href="/users/<%=current_user.id%>/tasks"><i class="material-icons left">today </i>Tasks</a>
          </li>
        </ul>
      <% else %>  
        <a href="/"><i class="material-icons left">home</i>P/M</a>
        <ul class="right">
          <li>
            <a href="/signup"><i class="material-icons right" >library_add</i>Sign Up</a>
          </li>
          <li> 
            <a href="/login"><i class="material-icons right "  >login</i>Log In</a>
          </li>
        </ul>
      <% end %>
    </div>
  </nav>
  <!-- End Navigation -->


  <div class="container">
      <!-- Errors -->
      <% if flash[:errors] %>
        <blockquote class="red lighten-3 white-text">
          <b>
            <% flash[:errors].each do |error| %>
            <div>
              <%= error %>
            </div>
          <% end %>
          </b>
        </blockquote>
      <% end %>
      <!-- End Errors -->

      <!-- Notices -->
      <% if flash[:notices] %>
        <blockquote class="green lighten-3 white-text">
          <b>
            <% flash[:notices].each do |notice| %>
            <div>
              <%= notice %>
            </div>
            <% end %>
          </b>
        </blockquote>
      <% end %>
      <!-- End Notices -->  
  </div>
  <body class="grey lighten-2">
    <!--Main Content -->
    <div class="container white lighten-4 z-depth-3" >
      <%= yield %>
    </div>
  </div> 
    <!-- End Main Content -->
    
    <!-- Footer -->
    <footer class="page-footer blue-grey darken-3" >
      <div class="container">
        <div class="row">
          <div class="col l6 s12">
            <h5 class="white-text">Project Manager</h5>
            <p class="grey-text text-lighten-4">Website made by Eriberto Guzman.</p>
          </div>
          <div class=" right">
            <h5 class="white-text">Links</h5>
            <ul>
              <li><a class="grey-text text-lighten-3" href="https://github.com/Ejguzman3988">Github</a></li>
              <li><a class="grey-text text-lighten-3" href="https://www.linkedin.com/in/eriberto-guzman-1505361a1/">LinkedIn</a></li>
            </ul>
          </div>
        </div>
      </div>
      <div class="footer-copyright">
        <div class="container">
        Â© 2020 Copyright Text
      </div>
    </footer>    
    <!-- End Footer -->


    <!--Scripts-->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    
     <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <script>
      // Material Box
      $(document).ready(function(){
        $('.materialboxed').materialbox();
      });
      
      // Parallax
      $(document).ready(function(){
        $('.parallax').parallax();
      });

      // CHaracter Counter
      $(document).ready(function() {
        $('input#task_name, textarea#project_name, textarea#project_description').characterCounter();
      });
    
    </script>        
    
    <!--JavaScript at end of body for optimized loading-->
    <script type="text/javascript" src="js/materialize.min.js"></script>
