
<% if params[:query] && params[:query] != "" %>
    <h1>Search results for <%= params[:query]%></h1>
<% else %>
    <h1>List of All Projects.</h1>
<% end %>


<a href="/projects/new" class="btn"><i class="material-icons left" >create_new_folder</i>Create New Project</a>

<div>
    <div class="container">
        <% @projects.each do |project| %>
            <a href="/projects/<%=project.id%>" class="card no-dec">
                <img src="<%=project.img_link%>" class="e-img">
                <h1><%= project.name %></h1>
                <p><%= project.description %></p>
            </a>
          
        
        <% end %>
    </ul>  
</div>

<a href="/projects?page=<%=@page+1%>" class="btn show-more">Show More</a>