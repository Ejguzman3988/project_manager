<div>
    <img class="materialboxed right" style="margin-right:-30px; margin-left:30px; margin-top:-40px" width="400px" height="300px" src="<%=@project.img_link%>">
    <h1 display="inline-block" width="46%"><%= @project.name %></h1>
    <h4>created by, <%= @project.user.name.capitalize %></h4>
    <br>
    <div>
        <p style="text-align:center">
            <%= @project.description %>
        </p>
    </div>
</div>
<br>
<div>
<% if @project.user == current_user %>
    <div>
        <form action="/projects/<%=@project.id%>" method="post">
            <input type="hidden" name="_method" value="delete">
            <a href="/projects/<%=@project.id%>/edit"><button type="button">Edit Project</button></a>
            <input type="submit" value="Delete Project" style="float: right;">
        </form>
    </div>
<% end %>
</div>



