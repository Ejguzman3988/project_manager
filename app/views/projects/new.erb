<h1>Create Project</h1>
<div class="row">
    <form class="col s12" action="/projects" method="post">
        <div class="row">
            <div class="input-field col s12">
                <textarea name="user[project][name]" id="project_name" class="materialize-textarea"></textarea>
                <label for="project_name" style="font-size:22px">Project Name</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s12">
                <textarea name="user[project][description]" id="project_description" class="materialize-textarea"></textarea>
                <label for="project_description" style="font-size:22px">Project Description</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s12">
                <textarea name="user[project][img_link]" id="project_image_link" class="materialize-textarea"></textarea>
                <label for="project_image_link" style="font-size:22px">Image Url</label>
            </div>
        </div>

        <br>
        <button type="submit" class="grey darken-4 waves-effect waves-light btn-small"> <i class="material-icons left" style="margin-right:2px; margin-left:-8px">create_new_folder</i> Create Project</button> 
    </form>
</div>
   